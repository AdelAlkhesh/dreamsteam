<div class="listEditTitle">
  <h1>Edit list</h1>
  <h1>{{result.name}}</h1>

</div>
<div class="listform">
  <form method="POST" action="/lists/{{result._id}}/edit">
    <div class="form-floating mb-3">
      <input
        value="{{result.name}}"
        name="name"
        type="text"
        class="form-control"
        id="floatingInput"
        placeholder="List Name"
      />
      <label for="floatingInput">List Name</label>
    </div>
    <div class="form-floating">
      <input
        value="{{result.description}}"
        name="description"
        type="text"
        class="form-control"
        id="floatingInput"
        placeholder="Description"
      />
      <label for="floatingPassword">Description</label>
    </div>
    <div class="form-floating">
      <textarea
        value="{{result.games}}"
        class="form-control"
        placeholder="List Your Games Here"
        id="floatingTextarea"
        name="games"
      ></textarea>
      <label for="floatingTextarea">Games</label>
    </div>
    <div class="listBtn">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>

  </form>
</div>